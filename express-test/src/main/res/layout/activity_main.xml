<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:context="com.ubtrobot.mini.libs.express_test.MainActivity"
      >

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/setExpressFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仿真"
        />

    <Button
        android:id="@+id/expressTween"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试按钮，请不要点击"/>

    <Button
        android:id="@+id/loopPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="循环播放所有表情"/>

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        />


    <Button
        android:id="@+id/onProgressExpress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

  </LinearLayout>
</ScrollView>

